    server_name {{ main_domain }};
    ssl_certificate {{ ssl_cert_path }}{{ rule.cert_name }}.pem;
    ssl_certificate_key {{ ssl_cert_path }}{{ rule.cert_name }}.key;
    ssl_protocols TLSv1.2 TLSv1.3;
